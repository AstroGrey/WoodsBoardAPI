{
   "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "lib": [
         "es5",
         "es6"
      ],
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
   },
   "exclude": [
      "node_modules",
      "test/**/*.ts"
    ]
}